<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox onKeyReleased="#keyBinds" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.calculator.Controller">
    <children>
        <VBox alignment="TOP_RIGHT" style="-fx-background-color: D3D3D3;">
            <children>
                <Label fx:id="currentLabel">
                    <padding>
                        <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
                    </padding>
                    <font>
                        <Font size="30.0" />
                    </font>
                </Label>
                <Label fx:id="mainLabel">
                    <padding>
                        <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
                    </padding>
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
            </children>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
        </VBox>
        <GridPane hgap="10.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Button focusTraversable="false" mnemonicParsing="false" onAction="#clearAll" prefHeight="125.0" prefWidth="301.0" text="Clear all">
                    <font>
                        <Font size="18.0" />
                    </font></Button>
                <Button focusTraversable="false" mnemonicParsing="false" onAction="#clearCurrent" prefHeight="158.0" prefWidth="360.0" text="Clear" GridPane.columnIndex="1">
                    <font>
                        <Font size="18.0" />
                    </font></Button>
                <Button focusTraversable="false" mnemonicParsing="false" onAction="#getDigit" prefHeight="163.0" prefWidth="266.0" text="8" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <font>
                        <Font size="30.0" />
                    </font></Button>
                <Button focusTraversable="false" mnemonicParsing="false" onAction="#getDigit" prefHeight="148.0" prefWidth="296.0" text="7" GridPane.rowIndex="1">
                    <font>
                        <Font size="30.0" />
                    </font></Button>
                <Button focusTraversable="false" mnemonicParsing="false" onAction="#getDigit" prefHeight="134.0" prefWidth="427.0" text="4" GridPane.rowIndex="2">
                    <font>
                        <Font size="30.0" />
                    </font></Button>
                <Button focusTraversable="false" mnemonicParsing="false" onAction="#getDigit" prefHeight="137.0" prefWidth="385.0" text="5" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <font>
                        <Font size="30.0" />
                    </font></Button>
                <Button focusTraversable="false" mnemonicParsing="false" onAction="#getDigit" prefHeight="164.0" prefWidth="258.0" text="2" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <font>
                        <Font size="30.0" />
                    </font></Button>
                <Button focusTraversable="false" mnemonicParsing="false" onAction="#getDigit" prefHeight="204.0" prefWidth="384.0" text="1" GridPane.rowIndex="3">
                    <font>
                        <Font size="30.0" />
                    </font></Button>
                <Button focusTraversable="false" mnemonicParsing="false" onAction="#getDigit" prefHeight="155.0" prefWidth="277.0" text="9" GridPane.columnIndex="2" GridPane.rowIndex="1">
                    <font>
                        <Font size="30.0" />
                    </font></Button>
                <Button focusTraversable="false" mnemonicParsing="false" onAction="#getDigit" prefHeight="102.0" prefWidth="300.0" text="6" GridPane.columnIndex="2" GridPane.rowIndex="2">
                    <font>
                        <Font size="30.0" />
                    </font></Button>
                <Button focusTraversable="false" mnemonicParsing="false" onAction="#getDigit" prefHeight="183.0" prefWidth="161.0" text="3" GridPane.columnIndex="2" GridPane.rowIndex="3">
                    <font>
                        <Font size="30.0" />
                    </font></Button>
                <Button focusTraversable="false" mnemonicParsing="false" onAction="#getDigit" prefHeight="139.0" prefWidth="345.0" text="0" GridPane.columnIndex="1" GridPane.rowIndex="4">
                    <font>
                        <Font size="30.0" />
                    </font></Button>
                <Button focusTraversable="false" mnemonicParsing="false" onAction="#getOperation" prefHeight="137.0" prefWidth="340.0" text="รท" GridPane.columnIndex="3">
                    <font>
                        <Font size="30.0" />
                    </font></Button>
                <Button focusTraversable="false" mnemonicParsing="false" onAction="#getOperation" prefHeight="163.0" prefWidth="306.0" text="*" GridPane.columnIndex="3" GridPane.rowIndex="1">
                    <font>
                        <Font size="30.0" />
                    </font></Button>
                <Button focusTraversable="false" mnemonicParsing="false" onAction="#getOperation" prefHeight="170.0" prefWidth="215.0" text="-" GridPane.columnIndex="3" GridPane.rowIndex="2">
                    <font>
                        <Font size="30.0" />
                    </font></Button>
                <Button focusTraversable="false" mnemonicParsing="false" onAction="#getOperation" prefHeight="106.0" prefWidth="212.0" text="+" GridPane.columnIndex="3" GridPane.rowIndex="3">
                    <font>
                        <Font size="30.0" />
                    </font></Button>
                <Button fx:id="equalsButton" defaultButton="true" mnemonicParsing="false" onAction="#getOperation" prefHeight="93.0" prefWidth="156.0" text="=" GridPane.columnIndex="3" GridPane.rowIndex="4">
                    <font>
                        <Font size="30.0" />
                    </font></Button>
                <Button focusTraversable="false" layoutX="168.0" layoutY="332.0" mnemonicParsing="false" onAction="#getDigit" prefHeight="139.0" prefWidth="345.0" text="." GridPane.columnIndex="2" GridPane.rowIndex="4">
                    <font>
                        <Font size="30.0" />
                    </font>
                </Button>
                <Button focusTraversable="false" layoutX="168.0" layoutY="332.0" mnemonicParsing="false" onAction="#toggleNegative" prefHeight="139.0" prefWidth="345.0" text="+/-" GridPane.rowIndex="4">
                    <font>
                        <Font size="30.0" />
                    </font>
                </Button>
                <Button focusTraversable="false" layoutX="168.0" layoutY="332.0" mnemonicParsing="false" onAction="#getInverse" prefHeight="139.0" prefWidth="345.0" text="1/x" GridPane.columnIndex="2">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>
            </children>
        </GridPane>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
